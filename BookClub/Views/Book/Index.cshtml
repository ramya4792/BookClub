@model IList<BookClub.Models.Book>
@if(Model.Count == 0)
{
    <p>Not added any books yet!</p>
}
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Category</th>
        <th>Edit Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.BookCategory.Subject</td>
            <td><a asp-controller="Book" asp-action="Edit" asp-route-bookId="@item.ID">Edit</a></td>
        </tr>
    }


</table>

<p><a asp-controller="Book" asp-action="Add">Add Book</a></p>
<p><a asp-controller="Book" asp-action="Remove">Remove Book</a></p>